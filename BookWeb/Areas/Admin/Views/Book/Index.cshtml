@model IEnumerable<Book>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="col-6">
        <h2 class="text-primary">Categories</h2>
    </div>
    <div class="col-6">
        <a class="btn" asp-action="Upsert" asp-controller="Book">Add New</a>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Author</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Author</td>
                <td>@item.Price</td>
                <td>
                    <a class="btn btn-primary mx-2" asp-action="Edit" asp-controller="Book" asp-route-id="@item.Id" >Edit</a>
                    <a class="btn btn-danger mx-2" asp-action="Delete" asp-controller="Book" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}