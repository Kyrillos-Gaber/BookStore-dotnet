@model Category

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="">Edit Category</h2>
        </div>

        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="DisplayOrders">Orders</label>
            <input type="text" class="form-control" asp-for="DisplayOrders" placeholder="Display Orders">
            <span asp-validation-for="DisplayOrders" class="text-danger"></span>
        </div>

        <br />
        <br />

        <button type="submit" class="btn btn-primary">Save</button>

        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back</a>

    </div>

</form>